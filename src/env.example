# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/ai_for_good"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"
JWT_SECRET="your-jwt-secret-for-token-signing"

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT="https://your-openai-resource.openai.azure.com"
AZURE_OPENAI_KEY="your-openai-api-key"
AZURE_OPENAI_GPT_DEPLOYMENT="gpt-4" # or your deployment name
AZURE_OPENAI_DALLE_DEPLOYMENT="dall-e-3" # or your deployment name

# Azure Speech Services
AZURE_SPEECH_KEY="your-speech-api-key"
AZURE_SPEECH_REGION="eastus" # or your region

# Azure Translator Service
AZURE_TRANSLATOR_KEY="your-translator-api-key"
AZURE_TRANSLATOR_REGION="global" # or your region

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourstoragekey;EndpointSuffix=core.windows.net"
AZURE_STORAGE_CONTAINER="comics-content" # default container name

# Demo/Development Settings
SEED_TOKEN="demo-seed-token-for-hackathon"
# Set to "true" to bypass authentication in development
NEXT_PUBLIC_DEV_MODE="false"

# Google reCAPTCHA (if needed)
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key" 